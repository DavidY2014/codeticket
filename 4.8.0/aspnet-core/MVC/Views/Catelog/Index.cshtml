
@{
    ViewData["Title"] = "类目管理页";
    Layout = "~/Views/Shared/Layouts/_MasterTreeData.cshtml";
}
@section ToolMenuBar{
    <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newCatelog()()">添加根类目</a>
    <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newSecondCatelog()">添加二级类目</a>
}

@section TreeGrid {

    <div id="class1dlg" class="easyui-dialog" style="width:1000px;height:600px;padding:10px 20px"
         closed="true" buttons="#class1-dlg-buttons">
        <div class="ftitle">编辑根类目</div>
        <form id="fm1" method="post" novalidate>
            <div class="fitem">
                <label>根类目名称:</label>
                <input name="class1name" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>根类目排序:</label>
                <input name="class1sequence" class="easyui-validatebox" required="true">
            </div>

        </form>
    </div>
    <div id="class1-dlg-buttons">
        <a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveClass1()">Save</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#class1dlg').dialog('close')">Cancel</a>
    </div>


    <div id="class2dlg" class="easyui-dialog" style="width:1000px;height:600px;padding:10px 20px"
         closed="true" buttons="#class2-dlg-buttons">
        <div class="ftitle">编辑二级类目</div>
        <form id="fm2" method="post" novalidate>
            <div class="fitem">
                <label>二级类目名称:</label>
                <input name="class2name" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>所属根类目:</label>
                <input name="class1name" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>二级类目排序:</label>
                <input name="class2sequence" class="easyui-validatebox" required="true">
            </div>

        </form>
    </div>
    <div id="class2-dlg-buttons">
        <a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveClass2()">Save</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#class2dlg').dialog('close')">Cancel</a>
    </div>


    <div style="margin:20px 0;"></div>
    <table title="Folder Browser" class="easyui-treegrid" style="width:700px;height:400px"
           data-options="
                url: '/Catelog/GetTreeData',
                method: 'get',
                rownumbers: true,
                idField: 'id',
                treeField: 'name'
            ">
        <thead>
            <tr>
                <th data-options="field:'name'" width="220">Name</th>
                @*<th data-options="field:'size'" width="100" align="right">Size</th>
                    <th data-options="field:'date'" width="150">Modified Date</th>*@
            </tr>
        </thead>
    </table>



}

@section Script {
    <script type="text/javascript">

        function newCatelog() {
            $('#class1dlg').dialog('open').dialog('setTitle', '新商品');
            $('#fm1').form('clear');
            url: "/ProductInfos/CreateNewProduct"
        }

        function newSecondCatelog() {
            $('#class2dlg').dialog('open').dialog('setTitle', '新商品');
            $('#fm2').form('clear');
            url: "/ProductInfos/CreateNewProduct"
        }

        function saveClass1() {
        }

        function saveClass2() {
        }
    </script>

}


@section Style {
    <link rel="stylesheet" type="text/css" href="http://www.w3cschool.cc/try/jeasyui/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="http://www.w3cschool.cc/try/jeasyui/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="http://www.w3cschool.cc/try/jeasyui/demo/demo.css">
