@{
    Layout = "~/Views/Shared/Layouts/_MasterDataList.cshtml";
}
@section ToolMenuBar{
    <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="refresh()">刷新</a>
    <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newProduct()">新增</a>
    <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="exportExcel()">导出</a>
    <a href="#" class="easyui-linkbutton" plain="true" onclick="doSearch()">查询</a>
}
@section SearchCondition {
    <div id="tb" style="padding:3px">
        <table class="grid">
            <colgroup>
                <col width="10%" />
                <col width="23%" />
                <col width="10%" />
            </colgroup>
            <tbody>
                <tr>
                    <td width="10%">
                        <label>商品名称&nbsp;</label>
                    </td>
                    <td align="left">
                        <input id="productname" style="line-height:26px;border:1px solid #ccc">
                    </td>
                    <td width="10%">
                        <label>商品ID&nbsp;</label>
                    </td>
                    <td align="left">
                        <input id="productid" style="line-height:26px;border:1px solid #ccc">
                    </td>
                    <td width="10%">
                        <label>所属供应商&nbsp;</label>
                    </td>
                    <td align="left">
                        <input id="supplier" style="line-height:26px;border:1px solid #ccc">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>商品状态&nbsp;</label>
                    </td>
                    <td align="left">
                        <input id="status" style="line-height:26px;border:1px solid #ccc">
                    </td>
                    <td>
                        <label>一级类目&nbsp;</label>
                    </td>
                    <td align="left">
                        <input id="firstclass" style="line-height:26px;border:1px solid #ccc">
                    </td>
                    <td>
                        <label>二级类目&nbsp;</label>
                    </td>
                    <td align="left">
                        <input id="secondclass" style="line-height:26px;border:1px solid #ccc">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
@section GridColumn {
    <table id="dg" title="商品列表页" class="easyui-datagrid" style="width:1250px;height:250px"
           url="/ProductInfos/QueryProductList"
           pagination="true"
           rownumbers="true" fitColumns="true" singleSelect="true">
        <thead>
            <tr>
                <th field="productname" width="100">商品名称</th>
                <th field="title" width="100">标题</th>
                <th field="productid" width="100">商品ID</th>
                <th field="supplier" width="100">所属供应商</th>
                <th field="firstclass" width="100">一级类目</th>
                <th field="secondclass" width="100">二级类目</th>
                <th field="price" width="100">销售价/元</th>
                <th field="totalremain" width="50">总库存</th>
                <th field="totalsaled" width="100">当前总销量</th>
                <th field="currentremain" width="100">当前可用库存</th>
                <th field="status" width="150">商品状态</th>
                <th field="operation" width="100">操作</th>
                <th field="productstatus" hidden="hidden">状态</th>
            </tr>
        </thead>
    </table>


    <div id="dlg" class="easyui-dialog" style="width:1000px;height:600px;padding:10px 20px"
         closed="true" buttons="#dlg-buttons">
        <div class="ftitle">商品新增详情</div>
        <form id="fm" method="post" novalidate>
            <div class="fitem">
                <label>商品名称:</label>
                <input name="productname" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>商品标题:</label>
                <input name="title" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>一级类目:</label>
                <input id="newfirstclass" name="firstclass">
            </div>
            <div class="fitem">
                <label>二级类目:</label>
                <input id="newsecondclass" name="secondclass" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>配送区域:</label>
                <input id="newsendarea" name="sendarea" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>所属供应商:</label>
                <input id="newsupplier" name="supplier" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>成本价:</label>
                <input name="cost" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>销售价:</label>
                <input name="saleprice" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>当前可用库存:</label>
                <input name="currentremain" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>当前总销量:</label>
                <input name="totalsale" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>商品图片:</label>
                <input name="productpicturepath" class="easyui-validatebox">
            </div>
            <div class="fitem">
                <label>商品详情信息:</label>
                <input name="productdescription" height="300" width="600" class="easyui-validatebox" >
            </div>
        </form>
    </div>
    <div id="dlg-buttons">
        <a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveProduct()">Save</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">Cancel</a>
    </div>

}
@section Script {
    <script type="text/javascript">
        var url;
        /*渲染每行操作按钮*/
        function getRowIndex(target) {
            var tr = $(target).closest('tr.datagrid-row');
            return parseInt(tr.attr('datagrid-row-index'));
        }
        function refresh() {
            $('#dg').datagrid().refresh();
        }
        function newProduct() {
            $('#dlg').dialog('open').dialog('setTitle', '新商品');
            $('#fm').form('clear');
            url: "/ProductInfos/CreateNewProduct"
        }
        function editProduct(target) {
            var row = $('#dg').datagrid('getSelected');
            if (row) {
                if (row.productstatus == 1) {
                    //此为上架状态，不可编辑
                    $.messager.alert('警告', '请先下架该商品!', 'warning');
                } else {
                    $('#dlg').dialog('open').dialog('setTitle', '编辑商品');
                    $('#fm').form('load', row);
                    url = '/ProductInfos/EditProduct?id=' + row.id;
                }
            }
        }
        function checkProduct(target) {
            var row = getRowIndex(target);
            if (row >= 0) {
                $('#dlg').dialog('open').dialog('setTitle', '查看商品');
                $('#fm').form('load', row);
                url = '/ProductInfos/EditProduct?id=' + row.id;
            }
        }
        function switchProductStatus() {
            var selectItem = $('#dg').datagrid('getSelected');
            if (selectItem) {
                $.post('/ProductInfos/SwitchProductStatus', { productid: selectItem.productid }, function (result) {
                    if (result.success) {
                        $('#dg').datagrid('reload');	// reload the user data
                    } else {
                        $.messager.show({	// show error message
                            title: 'Error',
                            msg: result.msg
                        });
                    }
                }, 'json');
            }
        }
        function saveProduct() {
            $('#fm').form('submit', {
                url: url,
                onSubmit: function () {
                    return $(this).form('validate');
                },
                success: function (result) {
                    var result = eval('(' + result + ')');
                    if (result.success) {
                        $('#dlg').dialog('close');		// close the dialog
                        $('#dg').datagrid('reload');	// reload the user data
                    } else {
                        $.messager.show({
                            title: 'Error',
                            msg: result.msg
                        });
                    }
                }
            });
        }
        function removeProduct(target) {
            var row = getRowIndex(target)
            if (row >= 0) {
                $.messager.confirm('Confirm', '你确定要移除此商品吗?', function (r) {
                    if (r) {
                        $.post('remove_user.php', { id: row.id }, function (result) {
                            if (result.success) {
                                $('#dg').datagrid('reload');	// reload the user data
                            } else {
                                $.messager.show({	// show error message
                                    title: 'Error',
                                    msg: result.msg
                                });
                            }
                        }, 'json');
                    }
                });
            }
        }

        function exportExcel() {

        }

        function doSearch() {
            $('#dg').datagrid('load', {
                productname: $('#productname').val(),
                productid: $('#productid').val(),
                supplier: $('#supplier').combobox('getValue'),
                status: $('#status').combobox('getValue'),
                firstclass: $('#firstclass').val(),
                secondclass: $('#secondclass').val()
            });
        }

        $('#supplier').combobox({
            url: '/ProductInfos/GetSupplier',
            valueField: 'id',
            textField: 'name'
        });


        $('#status').combobox({
            url: '/ProductInfos/GetProductStatus',
            valueField: 'status',
            textField: 'name'
        });

        $('#firstclass').combobox({
            url: '/ProductInfos/GetFirstClass',
            valueField: 'id',
            textField: 'name'
        });

        $('#secondclass').combobox({
            url: '/ProductInfos/GetSecondClass',
            valueField: 'id',
            textField: 'name'
        });

        $('#newsupplier').combobox({
            url: '/ProductInfos/GetSupplier',
            valueField: 'id',
            textField: 'name'
        });

        $('#newsendarea').combobox({
            url: '/ProductInfos/GetSendArea',
            valueField: 'id',
            textField: 'name'
        });

        $('#newfirstclass').combobox({
            url: '/ProductInfos/GetFirstClass',
            valueField: 'id',
            textField: 'name'
        });

        $('#newsecondclass').combobox({
            url: '/ProductInfos/GetSecondClass',
            valueField: 'id',
            textField: 'name'
        });

    </script>
}

